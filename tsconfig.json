{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["vite/client"]
  },
  "include": ["src", "vite.config.*"],
  "exclude": ["dist", "node_modules"]
}
